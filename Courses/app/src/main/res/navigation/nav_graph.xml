<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/entranceFragment">

    <fragment
        android:id="@+id/entranceFragment"

        android:name="com.example.courses.presentation.view.EntranceFragment"
        android:label="EntranceFragment" >
        <action
            android:id="@+id/action_entranceFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/entranceFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.courses.presentation.view.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.courses.presentation.view.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="course"
            app:argType="com.example.domain.Course" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.courses.presentation.view.FavoriteFragment"
        android:label="FavoriteFragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.courses.presentation.view.ProfileFragment"
        android:label="ProfileFragment" />

</navigation>